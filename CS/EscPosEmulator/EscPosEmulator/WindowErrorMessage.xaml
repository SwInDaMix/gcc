<Window x:Class="EscPosEmulator.WindowErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscPosEmulator"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding Path=Printer, StringFormat='Error message for \{0\}'}" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Icon="Resources/ic_receipt.png">
    <Grid>
        <TextBlock Text="{Binding ErrorMessage}" Padding="30"></TextBlock>
    </Grid>
</Window>

